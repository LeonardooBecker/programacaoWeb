<h1>Alunos</h1>

<div id="link-top">
  <%= link_to  "Home", root_path %>
</div>

<div id="alunos">
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Sigla</th>
        <th>Estado</th>
      </tr>
    </thead>
    <tbody>
      <% @alunos.each do |aluno| %>
        <%= render "table",  aluno: aluno %> 
      <% end %>
    </tbody>
  </table>
</div>

<% if current_user.role == 'admin' %>
<div id="link-bottom">
  <%= link_to "New aluno", new_aluno_path %>
</div>
<% end  %>

<div id="modal" class="modal">
  <div class="modal-content">
    <span id="close-modal" class="close" data-controller="fade" data-action="click->fade#fade_out">&times;</span>
      <% @alunos.each do |aluno| %>
        <%= render "modal",  aluno: aluno %> 
      <% end %>
  </div>
</div>

